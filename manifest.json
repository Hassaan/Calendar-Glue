{
  "name": "Add to Calendar",
  "version": "1.0",
  "description": "This extension lets you add events encountered on web pages to your calendar, and lets your friends know about them.",
  "background_page" : "background.html",
  "browser_action": {
    "default_icon": "/images/calendar19.png",
    "default_title": "Show Calendar"
  },
  "permissions": [
    "http://*.google.com/", "https://*.google.com/",
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "/images/calendar16.png"
  }
}